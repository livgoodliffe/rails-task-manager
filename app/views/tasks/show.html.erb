<h1><%= @task.title %></h1>
<p class="bg-light p-3 border"><%= @task.details %></p>

<p>
  <% if @task.completed %>
    <p><i class="far fa-check-square"></i> This task is completed </p>
  <% else %>
    <p><i class="far fa-square"></i> This task has not been completed yet </p>
  <% end %>
  <%= link_to "Back to list", tasks_path %>
</p>
